<Window x:Class="WPFShowAllPeocessApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFShowAllPeocessApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="showProcesslistbox">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="{Binding Index}" Width="40" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Name}" Width="250" Margin="10,0,0,0"/>
                        <TextBlock Text="{Binding ChineseName}" Width="200" Margin="10,0,0,0" Foreground="Blue"/>
                        <TextBlock Text="{Binding PID}" Margin="50,0,0,0" Width="80"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>